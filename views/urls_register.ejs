<% include ./partials/_header %>

<form action="/register" method="POST">
      <div class="form-group mb-2">
        <div class = "form-inline">
          <label for="longURL">Email:</label>
          <input class="form-control" type="text" name="email" placeholder="enter email" style="width: 300px; margin: 1em">
        </div>
        <div class = "form-inline">
          <label for="longURL">Password:</label>
          <input class="form-control" type="password" name="password" placeholder="enter password" style="width: 300px; margin: 1em">
        </div>
        <div class = "form-inline">
          <label for="longURL">Confirm Password:</label>
          <input class="form-control" type="password" name="cpassword" placeholder="re-enter password" style="width: 300px; margin: 1em">
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </div>
    </form>

</body>
</html>